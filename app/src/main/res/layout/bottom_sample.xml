<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheetcontainer"
    app:cardCornerRadius="10dp"
    android:background="@drawable/bottom_sheet_rectangular"
    android:backgroundTint="#4E4957">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Account Details"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/close_details"
            android:layout_marginRight="10dp"
            android:paddingLeft="12dp"
            android:letterSpacing="0.03"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#66E1D5"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_payment_24"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Top up Account"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Account"
                android:textSize="15dp"
                android:textColor="@color/teal_200"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/rss"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Account Balance"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Top up Account"
                        android:textColor="@color/teal_200"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:id="@+id/account_bal"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        />

                </LinearLayout>


            </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
