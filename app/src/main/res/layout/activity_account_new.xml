<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_new.Account_new"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Continue with mobile"
            android:textSize="24dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:id="@+id/continue_mobile_head"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile verification"
            android:textSize="24dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingBottom="30dp"
            android:id="@+id/otp_sent_head"
            android:visibility="gone"

            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"

            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="200dp"
        android:id="@+id/send_otp_box"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Mobile Number for the SMS to be sent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:letterSpacing="0.07"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter mobile no"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#61657E"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:id="@+id/enter_mobile"
            />

        <TextView
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:text="Send Otp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/border_shape"
            android:backgroundTint="@color/design_default_color_primary"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:id="@+id/get_otp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/otp_verif_box"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLease enter the 4 digit code from the SMS sent to your phone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"

            />
        <LinearLayout
            android:id="@+id/root_otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <EditText
                android:id="@+id/otp_edit_box1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@drawable/edittext_curl_shape"
                android:backgroundTint="@color/black"/>

            <EditText
                android:id="@+id/otp_edit_box2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="30sp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:background="@drawable/edittext_curl_shape"
                android:backgroundTint="@color/black"/>

            <EditText
                android:id="@+id/otp_edit_box3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="30sp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:background="@drawable/edittext_curl_shape"
                android:backgroundTint="@color/black"/>

            <EditText
                android:id="@+id/otp_edit_box4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:background="@drawable/edittext_curl_shape"
                android:backgroundTint="@color/black"/>


        </LinearLayout>


        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Verify Otp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/border_shape"
            android:backgroundTint="@color/design_default_color_primary"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/verify_otp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="1"
        android:id="@+id/enter_code_box"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="@color/purple_200"
            android:textSize="15dp"
            android:id="@+id/skip_login"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="1"
        android:id="@+id/get_back_box"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/purple_200"
            android:textSize="15dp"
            android:id="@+id/go_back"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>