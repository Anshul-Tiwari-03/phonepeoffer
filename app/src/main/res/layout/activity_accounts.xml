<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_account.accounts"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Account Summary"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawablePadding="15dp"
            android:id="@+id/go_back_myacc"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/hint"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:id="@+id/accounts_bolck"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#DFDDDD"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Balance"
                    android:textColor="#8F8585"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:id="@+id/account_balance"
                    />
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_gravity="right"
                android:src="@drawable/rss"
                app:civ_border_color="#FF000000"
                android:id="@+id/history_image"
                android:layout_margin="10dp"/>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Details"
            android:textColor="#8F8F8F"
            android:layout_margin="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/hint"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/rss"
                android:layout_weight=".2"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recharge"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Successful Recharges Amount"
                    android:textColor="@color/hint"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100 INR"
                android:layout_weight=".3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/recharge_amount"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/hint"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1.5"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/rss"
                android:layout_weight=".2"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Withdrawn"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total successful payout Amount"
                    android:textColor="@color/hint"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100 INR"
                android:layout_weight=".3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/withdrawn_Amount"
                />
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E8E6E6"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Transaction History"
            android:textColor="#8F8F8F"
            android:layout_margin="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recharge Now"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:paddingLeft="15dp"
        />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw Now"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:backgroundTint="#EA7F5D"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:id="@+id/withdraw_now"
        />

</FrameLayout>